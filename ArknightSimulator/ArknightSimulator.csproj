<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <UseWPF>true</UseWPF>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Image\operationSettingTitle.png" />
    <None Remove="Image\operatorSettingTitle.png" />
    <None Remove="Image\simulatorTitle.png" />
    <None Remove="Image\title.png" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="Image\operationSettingTitle.png" />
    <Resource Include="Image\operatorSettingTitle.png" />
    <Resource Include="Image\simulatorTitle.png" />
    <Resource Include="Image\title.png" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="ImageResource.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>ImageResource.resx</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Update="ImageResource.resx">
      <Generator>ResXFileCodeGenerator</Generator>
      <LastGenOutput>ImageResource.Designer.cs</LastGenOutput>
    </EmbeddedResource>
  </ItemGroup>

</Project>
